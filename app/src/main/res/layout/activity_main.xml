<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Жеребьёвка спортивных соревнований"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="#8E5DD5"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:background="#E7E4EC"
        android:ems="10"
        android:inputType="number"
        android:hint="Введите количество участников"
        android:textSize="19sp"
        android:textStyle="italic"
        android:textColor="#8E5DD5"
        android:textColorHint="#A79ABA"
        android:gravity="center"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />


    <TextView
        android:id="@+id/output"
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:padding="5dp"
        android:background="#F3F3F3"
        android:gravity="center"
        android:hint="Для демонстрации порядка выступления участников, нужно встряхнуть телефон"
        android:textColor="#8E5DD5"
        android:textColorHint="#A79ABA"
        android:textSize="19sp"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input" />

</androidx.constraintlayout.widget.ConstraintLayout>